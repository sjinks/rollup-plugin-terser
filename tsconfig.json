{
    "compilerOptions": {
        "target": "es2019",
        "module": "CommonJS",
        "noEmitOnError": true,
        "outDir": "./dist",
        "sourceMap": true,
        "declaration": true,
        "removeComments": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "typeRoots": [
            "./node_modules/@types/"
        ]
    },
    "compileOnSave": true,
    "include": ["src/**.ts", "test/**.ts"]
}
